<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:picker="http://schemas.android.com/apk/res-auto">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/playerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:id="@+id/spinnerPlayers" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerPlayers"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/spinnerYear" />

    <com.wefika.horizontalpicker.HorizontalPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/picker"
        android:textColor="#000000"
        android:textSize="22sp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="-1"
        picker:values="@array/Bulls"
        picker:dividerSize="@dimen/activity_vertical_margin"
        picker:sideItems="@integer/numSideItems"
        android:layout_below="@+id/spinnerYear"
        android:layout_alignParentStart="true" />

</RelativeLayout>